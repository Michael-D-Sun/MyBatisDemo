<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.michael.entity.UserMapper">

    <select id="getPage" parameterType="Map" resultType="cn.michael.entity.User">
    select id, name, pwd from user limit #{startIndex}, #{pageSize}
    </select>

    <select id="selectUser" parameterType="Map" resultType="cn.michael.entity.User">
    select id, name, pwd from user where id=#{id}
    </select>

    <insert id="addUser" parameterType="cn.michael.entity.User" useGeneratedKeys="true">
        insert into user(name, pwd) values (#{name}, #{pwd})
    </insert>

    <delete id="deleteUser" parameterType="cn.michael.entity.User" >
        delete from user where id=#{id}
    </delete>

    <update id="updateUser" parameterType="cn.michael.entity.User" >
       update user set name=#{name}, pwd=#{pwd} where id=#{id}
    </update>
</mapper>